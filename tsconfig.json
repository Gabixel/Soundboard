// Also check https://github.com/tsconfig/bases/blob/main/bases/node16.json

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 16",

	"compilerOptions": {
		// "composite": true,
		// "rootDir": "./ts/",
		// "outDir": "./js/",
		"outFile": "./js/build.js",
		"target": "ESNext",
		// "module": "AMD",
		"lib": ["ES2021", "DOM"],

		// Export
		"preserveConstEnums": true,
		"removeComments": true,

		// Intellisense
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noImplicitThis": true,
		// "noImplicitUseStrict": true,
		"strictNullChecks": false,

		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",

		"declaration": true,
		// "emitDeclarationOnly": true,
		"allowJs": false
	},

	// "include": ["./ts/**/*.ts"],
	"exclude": [
		"node_modules"
		// "js"
	],
	"files": [
		"./ts/utility/Logger.ts",
		"./ts/utility/SoundBoardApi.ts",
		"./ts/utility/ExtendedMath.ts",
		"./ts/utility/EventFunctions.ts",

		"./ts/grid/GridResizer.ts",
		"./ts/grid/Grid.ts",
		"./ts/grid/ButtonSwap.ts",
		"./ts/grid/ButtonFilter.ts",
		"./ts/grid/SoundButton.ts",

		"./ts/audio/AudioPool.ts",
		"./ts/audio/AudioStoreManager.ts",
		"./ts/audio/AudioPlayer.ts",
		"./ts/audio/Audio.ts",

		"./ts/controls/Presets_Panel.ts",
		"./ts/controls/UiScale.ts",

		"./ts/ToolbarManager.ts",
		"./ts/Index.ts"
	]
}
