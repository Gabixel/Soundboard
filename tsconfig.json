// Also check https://github.com/tsconfig/bases/blob/main/bases/node16.json

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 16",

	"compilerOptions": {
		// "composite": true,
		"rootDir": "./ts",
		"outDir": "./js/",
		// "outFile": "./js/build.js",
		"target": "ESNext",
		// "module": "AMD",
		"lib": ["ES2021", "DOM"],

		// Export
		"preserveConstEnums": true,
		"removeComments": true,

		// Intellisense
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noImplicitThis": true,
		// "noImplicitUseStrict": true,
		"strictNullChecks": false,

		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",

		"declaration": true,
		// "emitDeclarationOnly": true,
		"allowJs": false
	},

	"include": ["./ts/**/*.ts"],
	"exclude": [
		"node_modules"
		// "js"
	]
}
